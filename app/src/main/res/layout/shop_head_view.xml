<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:image_scale_type="center_crop"
            app:indicator_drawable_selected="@mipmap/banner_grey"
            app:indicator_drawable_unselected="@mipmap/banner_grey"
            app:indicator_height="9dp"
            app:indicator_margin="3dp"
            app:indicator_width="9dp"
            app:is_auto_play="true" >
        </com.youth.banner.Banner>

        <ImageView
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/icon_banner"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            />
    </FrameLayout>


    <FrameLayout
        android:background="#F8F8F8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shop_category"
            android:background="@color/theme_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >
        </android.support.v7.widget.RecyclerView>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:visibility="gone"
        >
        <!--返利商城   、淘宝商城、积分商城、和顺商城-->
        <TextView
            android:id="@+id/tv_shop3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@drawable/tab_text_selector"
            android:text="返利商城"
            android:background="@drawable/selector_tab_bg"
            android:gravity="center"
            />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fafafa"/>
        <TextView
            android:id="@+id/tv_shop1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@drawable/tab_text_selector"
            android:text="淘宝商城"
            android:background="@drawable/selector_tab_bg"
            android:gravity="center"
            />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fafafa"/>
        <TextView

            android:id="@+id/tv_shop4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@drawable/tab_text_selector"
            android:text="积分商城"
            android:background="@drawable/selector_tab_bg"
            android:gravity="center"
            />


        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fafafa"/>
        <TextView
            android:id="@+id/tv_shop2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@drawable/tab_text_selector"
            android:text="和顺商城"
            android:background="@drawable/selector_tab_bg"
            android:gravity="center"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fafafa"
        android:visibility="gone"/>
    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@drawable/tab_text_selector"
            android:text="综合排序"

            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@drawable/tab_text_selector"
            android:text="销量优先"

            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@drawable/tab_text_selector"
            android:text="@string/xinpin"
            android:gravity="center"
            />


    </LinearLayout>

</LinearLayout>