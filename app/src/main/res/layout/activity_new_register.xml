<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.astgo.naoxuanfeng.activity.register.RegisterActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_white"
        app:tabIndicatorColor="@color/color_new_them"
        app:tabSelectedTextColor="@color/color_new_them"
        app:tabTextColor="@color/theme_black"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabIndicatorHeight="3dp"
        >

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>
