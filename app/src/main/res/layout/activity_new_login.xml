<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/theme_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/login_20181110104403" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_white"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logins_20181110145012" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp">
            <ImageView
                android:id="@+id/img1"
                android:layout_marginLeft="8dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/login_20181110144957" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/login_20181110144927"
                android:id="@+id/img2"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="40dp"
                android:layout_below="@id/img1"/>


          <EditText
              android:id="@+id/et_account"
              android:layout_width="300dp"
              android:layout_height="45dp"
              android:textColor="#7C8790"
              android:paddingBottom="20dp"
              android:hint="@string/login_account_tip"
              android:background="@drawable/et_bottom_line_bg"
              android:inputType="phone"
              android:maxLines="1"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="25dp"
              android:layout_toRightOf="@id/img1"/>

          <EditText
              android:id="@+id/et_password"
              android:layout_width="300dp"
              android:layout_height="45dp"
              android:textColor="#7C8790"
              android:layout_marginTop="30dp"
              android:paddingBottom="20dp"
              android:hint="@string/input_pwd"
              android:background="@drawable/et_bottom_line_bg"
              android:inputType="textPassword"
              android:maxLines="1"
              android:layout_marginLeft="25dp"
              android:layout_toRightOf="@id/img2"
              android:layout_below="@id/et_account"/>
        </RelativeLayout>



        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            >

            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_pwd"
                android:textColor="#FF8A37"
                android:textSize="16sp"
                />


            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_register"
                android:layout_gravity="end"
                android:textColor="#FF8A37"
                android:textSize="16sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/icon_btn_login_bg"
            android:gravity="center_horizontal|top"
            android:paddingTop="21dp"
            android:text="@string/login_sign_in"
            android:textColor="@color/theme_white"
            android:textSize="16sp" />
    </LinearLayout>
    
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_login_bottom_bg"
        android:scaleType="centerCrop"
        />

</RelativeLayout>

