<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:id="@+id/enroll_img"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/enroll_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/enroll_img"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:text="aaa"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/enroll_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enroll_title"
      android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/enroll_img"
        android:text="aaa"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/enroll_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enroll_start_time"
        android:layout_toEndOf="@+id/enroll_img"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="aaa"
        android:textColor="#000"/>

  <!--  <RadioButton
        android:id="@+id/radio_but_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/enroll_start_time"
        android:layout_marginEnd="18dp"
      />-->


 <CheckBox
        android:id="@+id/checkbox_but_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/enroll_start_time"
        android:layout_marginEnd="18dp"
        />

</RelativeLayout>